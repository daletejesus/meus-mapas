generator client { // Client usado nas rotas HTTP
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

generator clientNode { // Client usado para arquivo Seed
  provider = "prisma-client-js"
}


model Mapa {
  id        String      @id @default(cuid())
  name      String
  dataCadastro DateTime @default(now())
  status    Boolean     @default(true)

  ponto Ponto[]
}

model Ponto {
  id        String      @id @default(cuid())
  idMapa    String
  name      String
  latitude  String
  longitude String
  dataCadastro DateTime @default(now())
  status    Boolean

  mapa   Mapa @relation(fields: [idMapa], references: [id])
}